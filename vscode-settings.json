{
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 12,
    "editor.fontLigatures": true,
    "workbench.fontAliasing": "antialiased",
    "debug.console.fontFamily": "JetBrains Mono",
    // "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.fontSize": 14,
    "editor.lineHeight": 2,
    "editor.linkedEditing": true,
    "workbench.statusBar.visible": true,
    "editor.bracketPairColorization.enabled": false,
    "fontshortcuts.defaultFontSize": 13,
    "fontshortcuts.defaultTerminalFontSize": 13,
    "fontshortcuts.step": 1,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "editor.minimap.renderCharacters": false,
    "editor.minimap.autohide": true,
    "editor.minimap.scale": 2,
    // "terminal.integrated.defaultProfile.osx": "zsh",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "prettier.trailingComma": "es5",
    "prettier.tabWidth": 4,
    "prettier.semi": true,
    "prettier.singleQuote": false,
    "prettier.printWidth": 80,
    "prettier.bracketSpacing": false,
    "prettier.bracketSameLine": false,
    "prettier.arrowParens": "always",
    "explorer.confirmDelete": false,
    "workbench.iconTheme": "vscode-icons",
    "scm.inputFontFamily": "deafult",
    "vsicons.dontShowNewVersionMessage": true,
    "terminal.integrated.letterSpacing": 2,
    "redhat.telemetry.enabled": false,
    // "[java]": {
    //     // "editor.defaultFormatter": "redhat.java",
    //     "editor.defaultFormatter": "xaver.clang-format"
    // },
    "editor.guides.highlightActiveBracketPair": false,
    "editor.guides.bracketPairsHorizontal": false,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "workbench.colorCustomizations": {
        // "sideBar.background": "#313335",
        // "statusBar.background": "#1A1A1A",
        // "statusBar.foreground": "#a9b7c6",
        // "editorGutter.background": "#232525",
        // "titleBar.activeBackground": "#313335",
        // "titleBar.border": "#313335",
        // "tab.activeBackground": "#232525",
        // "tab.activeBorder": "#232525",
        // "activityBar.background": "#313335"
    },
    "explorer.confirmDragAndDrop": false,

    // Silence the Noise
    "breadcrumbs.enabled": false,
    "scm.diffDecorations": "none",
    "editor.hover.delay": 1500,
    "editor.hover.enabled": true,
    "editor.matchBrackets": "never",
    "workbench.tips.enabled": false,
    "editor.colorDecorators": false,
    "git.decorations.enabled": false,
    "workbench.startupEditor": "none",
    "editor.lightbulb.enabled": "off",
    "editor.selectionHighlight": false,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "problems.decorations.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",

    "editor.copyWithSyntaxHighlighting": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.emptySelectionClipboard": false,
    "workbench.editor.enablePreview": false,
    "window.newWindowDimensions": "inherit",
    "editor.multiCursorModifier": "ctrlCmd",
    "files.trimTrailingWhitespace": true,
    "diffEditor.renderSideBySide": false,
    "editor.snippetSuggestions": "top",
    "editor.detectIndentation": false,
    "window.nativeFullScreen": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    // "workbench.editor.showTabs": "none",
    "editor.minimap.enabled": false,
    "editor.guides.indentation": false,
    "editor.scrollbar.horizontalScrollbarSize": 0,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.colorTheme": "Gruvbox Light Hard",
    "workbench.sideBar.location": "left",
    "editor.titleBar.enabled": false,
    "window.titleBarStyle": "custom",
    "window.commandCenter": false,
    "telemetry.telemetryLevel": "off"
}
