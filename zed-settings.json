{
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": true,
  "show_wrap_guides": false,
  "scrollbar": {
    "show": "always"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "format_on_save": "on",
  "indent_guides": {
    "enabled": false
  },
  "show_edit_predictions": false,
  "show_completions_on_input": true,
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false,
    "code_actions": false,
    "breadcrumbs": false
  }
}
