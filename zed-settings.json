{
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": true,
  "buffer_font_family": "JetBrains Mono",
  "buffer_line_height": { "custom": 1.9 },
  // "buffer_font_weight": 600,
  "show_wrap_guides": false,
  "scrollbar": {
    "show": "always"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": false
  },
  "format_on_save": "on",
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "background_coloring": "indent_aware"
  }
}
